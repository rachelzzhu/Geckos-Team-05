  <main>
    <h2>Contact Us</h2>

    <form action="#" method="GET" class="contactForm">

        <div id="name-container">
          <label for="name">Name:</label>
          <input class="inputBox" type="text" name="name" id="name" required>
        </div>

        <div id="email-container">
          <label for="email">Email:</label>
          <input class="inputBox" type="email" name="email" id="email">
        </div>

        <div id="phone-container">
          <label for="phone">Phone number:</label>
          <input class="inputBox" type="tel" name="phone" id="phone" required>
        </div>
      
        <div id="comments-container">
          <label for="comments">Comments/Questions:</label>
          <textarea class="inputBox" cols="25" rows="10">Enter your comments (e.g. What type of beets do you grow? Should I be concerned about bears?</textarea>
        </div>

        <div id="submit-container">
          <input type="submit" name="submit" value="Submit">
        </div>

    </form>
